<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="remember_position"
        android:title="@string/pref_title_remember_position"
        android:summary="@string/pref_description_remember_position"
        android:defaultValue="@string/pref_default_remember_position" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="account_name"
        android:title="@string/pref_title_account_name"
        android:defaultValue="@string/pref_default_account_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
