<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_bug"
        android:padding="16dp"
        android:textSize="@dimen/headline"
        android:gravity="center"
        android:id="@+id/textView13" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView13"
        android:layout_above="@+id/linearLayout15">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin">
            <LinearLayout
                style="@style/Widget.CardContent"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/bug_report"
                        android:gravity="top"
                        android:paddingBottom="16dp"
                        android:id="@+id/editText" />

                    <Button
                        android:id="@+id/include_log_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/attached_files"
                        android:drawableLeft="@drawable/ic_insert_drive_file_black_24dp"
                        android:textColor="@color/dark_secondary_text"
                        android:textSize="@dimen/button"
                        android:padding="16dp"
                        android:drawablePadding="10dp"
                        android:background="?attr/selectableItemBackground"
                        android:layout_below="@+id/editText" />
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:id="@+id/linearLayout15">
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/title_cancel"
            android:textColor="@color/dark_secondary_text"
            android:textSize="@dimen/button"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/confirm"
            android:textColor="?attr/colorAccent"
            android:padding="16dp"
            android:textSize="@dimen/button"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>
</RelativeLayout>