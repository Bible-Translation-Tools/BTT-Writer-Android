<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Center content pane -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/centerPane">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:layout_weight="1"
                    android:background="#eee"
                    android:id="@+id/contentLeft">

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="2dp"
                    android:background="#dee2d0"
                    android:id="@+id/contentRight">

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/scrollView"
                        android:background="@drawable/sketchpad_background"
                        android:fillViewport="true" />
                </FrameLayout>

            </LinearLayout>


            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="New Button"-->
                <!--android:id="@+id/button3"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_alignParentBottom="true"/>-->
        </RelativeLayout>
    </LinearLayout>

    <!-- Left content pane -->
    <com.slidinglayer.SlidingLayer
        xmlns:slidingLayer="http://schemas.android.com/apk/res-auto"
        android:id="@+id/leftPane"
        android:layout_width="@dimen/sliding_layer_width"
        android:layout_height="match_parent"
        slidingLayer:offsetWidth="@dimen/offset_width"
        slidingLayer:stickTo="left"
        slidingLayer:openOnTapEnabled="false"
        slidingLayer:closeOnTapEnabled="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/offset_width"
            android:background="@color/blue"
            android:id="@+id/leftPaneContent">
        </RelativeLayout>

    </com.slidinglayer.SlidingLayer>

    <!-- Right content pane -->
    <com.slidinglayer.SlidingLayer
        xmlns:slidingLayer="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rightPane"
        android:layout_width="@dimen/sliding_layer_width"
        android:layout_height="match_parent"
        slidingLayer:offsetWidth="@dimen/offset_width"
        slidingLayer:stickTo="right"
        slidingLayer:closeOnTapEnabled="false"
        android:layout_alignParentEnd="true"
        slidingLayer:openOnTapEnabled="false"
        android:layout_alignParentRight="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/offset_width"
            android:background="@color/purple"
            android:id="@+id/rightPaneContent">
        </RelativeLayout>

    </com.slidinglayer.SlidingLayer>

    <!-- Top content pane -->
    <com.slidinglayer.SlidingLayer
        xmlns:slidingLayer="http://schemas.android.com/apk/res-auto"
        android:id="@+id/topPane"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sliding_layer_width_narrow"
        slidingLayer:offsetWidth="@dimen/offset_width"
        slidingLayer:stickTo="top"
        slidingLayer:openOnTapEnabled="false"
        slidingLayer:closeOnTapEnabled="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:paddingBottom="@dimen/offset_width"
            android:id="@+id/topPaneContent">
        </RelativeLayout>
    </com.slidinglayer.SlidingLayer>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGripLeft"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_grip_left"
        android:background="@null"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGripRight"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_grip_right"
        android:background="@null"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGripTop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_grip_top"
        android:background="@null"/>

    <!-- Bottom content pane -->
    <!--<com.slidinglayer.SlidingLayer-->
