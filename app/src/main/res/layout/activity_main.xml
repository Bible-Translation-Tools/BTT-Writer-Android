<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Center content pane -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/centerPane">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    android:background="@drawable/gray_vertical_border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose some source text from the left tab to get started"
                        android:id="@+id/helpTextView"
                        android:textSize="@dimen/h3"
                        android:padding="50dp"
                        android:layout_gravity="center"
                        android:textColor="@color/gray"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/sourceText"
                        android:textSize="@dimen/h4"
                        android:maxLines="9999"
                        android:scrollbars="vertical"
                        android:padding="10dp"
                        android:textColor="@color/dark_gray" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView"
                        android:adjustViewBounds="false"
                        android:background="@drawable/ruled_paper" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:baselineAligned="false">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/inputText"
                            android:inputType="textNoSuggestions|textCapSentences|text|textMultiLine"
                            android:enabled="true"
                            android:gravity="top"
                            android:textColor="@color/dark_gray"
                            android:lineSpacingExtra="1.5dp"
                            android:paddingTop="25dp" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/drawer_edge_width"
    android:background="@color/blue"
    android:layout_gravity="start"
    android:id="@+id/leftPaneContent">
    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/drawer_edge_width"
    android:background="@color/purple"
    android:layout_gravity="end"
    android:id="@+id/rightPaneContent">
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>