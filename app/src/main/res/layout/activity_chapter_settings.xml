<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.door43.translationstudio.ChapterSettingActivity"
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/gray_vertical_border"
            android:padding="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Language: Chapter"
                android:id="@+id/sourceLanguageName"
                android:gravity="center"
                android:textColor="@color/gray"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter_title_field"
                android:paddingTop="10dp"
                android:textSize="@dimen/h5"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Chapter Title"
                android:id="@+id/sourceLanguageChapterTitle" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter_reference_field"
                android:paddingTop="10dp"
                android:textSize="@dimen/h5"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Chapter Reference"
                android:id="@+id/sourceLanguageChapterReference" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Language: Chapter"
                android:id="@+id/targetLanguageName"
                android:gravity="center"
                android:textColor="@color/gray"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter_title_field"
                android:paddingTop="10dp"
                android:textSize="@dimen/h5"
                android:textStyle="bold" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/targetLanguageChapterTitleEditText"
                android:hint="@string/chapter_title_field"
                android:singleLine="true"
                android:textSize="@dimen/h5"
                android:background="@drawable/form_input" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter_reference_field"
                android:paddingTop="10dp"
                android:textSize="@dimen/h5"
                android:textStyle="bold" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/targetLanguageChapterReferenceEditText"
                android:hint="Chapter Reference"
                android:singleLine="false"
                android:gravity="top"
                android:minLines="4"
                android:inputType="textNoSuggestions|text|textMultiLine"
                android:textSize="@dimen/h5"
                android:background="@drawable/form_input" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
