<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.door43.translationstudio.SharingActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export to SD"
        android:id="@+id/export_sd_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="exportSD" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export to App"
        android:id="@+id/export_app_button"
        android:layout_below="@+id/export_sd_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="exportApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share with nearby device"
        android:id="@+id/export_nearby_button"
        android:layout_below="@+id/export_app_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="exportNearby" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import from SD"
        android:id="@+id/import_sd_button"
        android:layout_below="@+id/export_nearby_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="importSD" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import from nearby device"
        android:id="@+id/import_nearby_button"
        android:layout_below="@+id/import_sd_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="importNearby" />

</RelativeLayout>
