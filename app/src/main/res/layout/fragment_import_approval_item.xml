<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/medium_gray"
        android:paddingBottom="1dp"
        android:id="@+id/confirmAllLayout"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:background="@color/primary_dark"></LinearLayout>

        <com.door43.translationstudio.util.BetterSwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import all?"
            android:id="@+id/confirmAllSwitch"
            android:textSize="@dimen/h5"
            android:textColor="@color/dark_gray"
            android:textOn="@string/yes"
            android:textOff="@string/no"
            android:padding="7dp"
            android:visibility="visible" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bodyLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout8"
            android:background="@color/lighter_gray">

            <com.door43.translationstudio.util.BetterSwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Import?"
                android:id="@+id/confirmationSwitch"
                android:textSize="@dimen/h5"
                android:textColor="@color/dark_gray"
                android:textOn="@string/yes"
                android:textOff="@string/no"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:minHeight="40dp"
                android:visibility="visible" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/approvalStatusButton"
                android:visibility="gone"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/approvalStatusImage"
                    android:background="@drawable/ic_error" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingRight="1dp"
                android:background="@color/light_gray"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentTop="false"
            android:id="@+id/linearLayout7"
            android:layout_toLeftOf="@+id/sublistImageView"
            android:layout_toEndOf="@+id/linearLayout8"
            android:layout_toRightOf="@+id/linearLayout8"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/approvalItemTitleText"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/h5"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="approval Description Textapproval Description Textapproval Description Text"
                android:id="@+id/approvalDescriptionText"
                android:textColor="@color/gray" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sublistImageView"
            android:background="@drawable/ic_chevron_right_black_24dp"
            android:layout_alignTop="@+id/linearLayout7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/linearLayout7"
            android:layout_centerVertical="true"
            android:layout_margin="5dp" />
    </RelativeLayout>

</LinearLayout>