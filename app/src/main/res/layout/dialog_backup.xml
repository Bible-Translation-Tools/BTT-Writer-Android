<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:minWidth="500dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:animateLayoutChanges="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backup"
        android:padding="16dp"
        android:textColor="@color/dark_primary_text"
        android:textSize="@dimen/headline"
        android:id="@+id/textView13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_separator"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/formLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/export_to_sd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backup_to_sd"
            android:drawableLeft="@drawable/icon_export_sd_dark"
            android:drawableStart="@drawable/icon_export_sd_dark"
            android:gravity="left|center_vertical"
            android:drawablePadding="10dp"
            android:textColor="@color/dark_primary_text"
            android:textAllCaps="false"
            style="@style/Widget.Button.Secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_separator"/>

        <Button
            android:id="@+id/upload_to_cloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backup_online"
            android:drawableLeft="@drawable/ic_backup_secondary_24dp"
            android:drawableStart="@drawable/ic_backup_secondary_24dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="10dp"
            android:textColor="@color/dark_primary_text"
            android:textAllCaps="false"
            style="@style/Widget.Button.Secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_separator"/>

        <Button
            android:id="@+id/export_to_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backup_to_app"
            android:drawableLeft="@drawable/ic_share_secondary_24dp"
            android:drawableStart="@drawable/ic_share_secondary_24dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="10dp"
            android:textColor="@color/dark_primary_text"
            android:textAllCaps="false"
            style="@style/Widget.Button.Secondary" />

    </LinearLayout>
</LinearLayout>