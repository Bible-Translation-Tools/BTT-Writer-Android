<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backup"
        android:padding="16dp"
        android:textSize="@dimen/headline"
        android:gravity="center"
        android:id="@+id/textView13" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="2dp"
            android:layout_margin="@dimen/card_margin">
            <LinearLayout
                style="@style/Widget.CardContent"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:id="@+id/loadingLayout"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title"
                        android:textColor="@color/dark_secondary_text"
                        android:text="@string/please_wait"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:id="@+id/progressBar2" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/formLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/upload_to_cloud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/backup_to_cloud"
                        android:drawableLeft="@drawable/ic_backup_secondary_24dp"
                        android:drawableStart="@drawable/ic_backup_secondary_24dp"
                        android:gravity="left|center_vertical"
                        android:drawablePadding="10dp"
                        style="@style/Widget.Button.Secondary" />

                    <Button
                        android:id="@+id/export_to_sd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/export_to_sd"
                        android:drawableLeft="@drawable/icon_export_sd_dark"
                        android:drawableStart="@drawable/icon_export_sd_dark"
                        android:gravity="left|center_vertical"
                        android:drawablePadding="10dp"
                        style="@style/Widget.Button.Secondary" />

                    <Button
                        android:id="@+id/import_from_sd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/import_from_sd"
                        android:drawableLeft="@drawable/icon_import_sd_dark"
                        android:drawableStart="@drawable/icon_import_sd_dark"
                        android:gravity="left|center_vertical"
                        android:drawablePadding="10dp"
                        style="@style/Widget.Button.Secondary" />

                    <Button
                        android:id="@+id/export_to_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/export_to_app"
                        android:drawableLeft="@drawable/ic_share_secondary_24dp"
                        android:drawableStart="@drawable/ic_share_secondary_24dp"
                        android:gravity="left|center_vertical"
                        android:drawablePadding="10dp"
                        style="@style/Widget.Button.Secondary" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|end"
            android:id="@+id/controlsLayout"
            android:layout_below="@+id/cardView1">
            <Button
                android:id="@+id/dismiss_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/dismiss"
                android:textColor="@color/dark_secondary_text"
                android:textSize="@dimen/button"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>