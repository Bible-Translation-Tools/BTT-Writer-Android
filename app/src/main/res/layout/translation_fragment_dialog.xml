<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="20dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chapter Title &amp; Description"
                android:id="@+id/editChapterTitleText"
                android:textSize="@dimen/h3" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editChapterTitleEditText"
                android:hint="Chapter Title"
                android:singleLine="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editChapterReferenceEditText"
                android:hint="Chapter Reference"
                android:singleLine="false"
                android:lines="2" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Language"
                    android:textSize="@dimen/h3" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/languageNameText"
                        android:layout_weight="1"
                        android:textSize="@dimen/h3"
                        android:textColor="@color/gray" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change"
                        android:id="@+id/switchTargetLanguageButton"
                        android:background="@drawable/bordered_button"
                        android:padding="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="20dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/cancelEditChapterTitleButton"
                    android:layout_weight="1"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@drawable/bordered_button"
                    android:textColor="@color/dark_gray"
                    android:layout_marginRight="10dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/saveChapterTitleButton"
                    android:layout_weight="1"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
