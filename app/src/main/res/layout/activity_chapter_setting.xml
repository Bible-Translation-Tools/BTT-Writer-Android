<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.door43.translationstudio.ChapterSettingActivity"
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/gray_vertical_border"
            android:padding="10dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/source_language_field"
                android:paddingRight="10dp"
                android:textSize="@dimen/h4" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Change"
                android:id="@+id/switchSourceLanguageButton"
                android:layout_marginTop="5dp"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/bordered_button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter_title_field"
                android:paddingTop="10dp"
                android:textSize="@dimen/h4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Chapter Title"
                android:id="@+id/sourceLanguageChapterTitle" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter_reference_field"
                android:paddingTop="10dp"
                android:textSize="@dimen/h4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Chapter Reference"
                android:id="@+id/sourceLanguageChapterReference" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/target_language_field"
                android:paddingRight="10dp"
                android:textSize="@dimen/h4" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Change"
                android:id="@+id/switchTargetLanguageButton"
                android:background="@drawable/bordered_button"
                android:layout_marginTop="5dp"
                style="?android:attr/buttonStyleSmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter_title_field"
                android:paddingTop="10dp"
                android:textSize="@dimen/h4" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/targetLanguageChapterTitleEditText"
                android:hint="Chapter Title"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter_reference_field"
                android:paddingTop="10dp"
                android:textSize="@dimen/h4" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/targetLanguageChapterReferenceEditText"
                android:hint="Chapter Reference"
                android:singleLine="false"
                android:lines="2" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"></LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:paddingTop="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancelEditChapterTitleButton"
            android:layout_weight="1"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/bordered_button"
            android:textColor="@color/dark_gray"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/saveChapterTitleButton"
            android:layout_weight="1"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
</LinearLayout>
