<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <!--android:Theme.NoTitleBar.Fullscreen-->
    <style name="Theme.Main" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <!--<item name="colorAccent">@color/blue</item>-->

        <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal. -->

        <!--<item name="android:windowActionBar">false</item>-->
    </style>

    <style name="Theme.Titled" parent="Theme.AppCompat.Light">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/blue</item>

        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textColorLink">@color/blue</item>
        <item name="android:textColorLinkInverse">@color/green</item>
        <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal. -->

        <!--<item name="android:windowActionBar">false</item>-->
    </style>


    <style name="Widget.Button.Primary" parent="android:Widget">
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h4</item>
    </style>

    <style name="Widget.Button.Secondary" parent="android:Widget">
        <item name="android:background">@drawable/btn_gray</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/h4</item>
    </style>

    <style name="Widget.Button.Danger" parent="android:Widget">
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h4</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

