<resources>
    <string name="title_activity_settings" translatable="false">@string/settings</string>

    <!-- Section heading for general settings -->
    <string name="pref_header_general">General</string>
    <!-- Keep a record of the last page (frame) that was opened when the user closes the app -->
    <string name="pref_title_remember_position">Remember my place</string>
    <!-- description of remember last page settings entry -->
    <string name="pref_description_remember_position">Display the last viewed page when starting the app</string>
    <!-- Highlight key terms in the source text -->
    <string name="pref_title_highlight_key_terms">Highlight key terms</string>
    <!-- Description of highlight key terms settings menu entry -->
    <string name="pref_description_highlight_key_terms">Make key terms clickable in the source text</string>
    <!-- Title for the typefaced used in the app -->
    <string name="pref_title_translation_typeface">Font</string>
    <string-array name="pref_translation_typeface_titles" translatable="false">
        <item>Gentium Plus</item>
    </string-array>
    <!-- The font size of the translation typeface -->
    <string name="pref_title_typeface_size">Font Size</string>
    <string-array name="pref_typeface_size_titles">
        <item>small</item>
        <item>normal</item>
        <item>medium</item>
        <item>large</item>
    </string-array>

    <!-- Section heading for the Upload settings -->
    <string name="pref_header_synchronization" translatable="false">@string/title_upload</string>
    <!-- Changes in the translation will be saved automatically -->
    <string name="pref_title_autosave_delay">Auto Save Changes</string>
    <!-- The period of time that must elapse before a translation is automatically saved -->
    <string-array name="pref_autosave_titles">
        <item>Immediately</item>
        <item>After 1 second</item>
        <item>After 5 seconds</item>
        <item>After 10 seconds</item>
    </string-array>

    <!-- The server used to authenticate the device -->
    <string name="pref_title_auth_server">Authentication Server</string>
    <!-- The port on the server used to authenticate the device -->
    <string name="pref_title_auth_server_port">Authentication Server Port</string>
    <!-- The server to which data is uploaded -->
    <string name="pref_title_git_server">Data Server</string>
    <!-- The port on the server to which data is uploaded -->
    <string name="pref_title_git_server_port">Data Server Port</string>
    <!-- The server from which data is downloaded -->
    <string name="pref_title_media_server">Media Server</string>

    <!-- Section heading for Sharing settings -->
    <string name="pref_header_sharing" translatable="false">@string/title_activity_sharing</string>
    <!-- The format to which projects will be exported from the app -->
    <string name="pref_title_export_format">Export Format</string>
    <string-array name="pref_export_format_titles"  translatable="false">
        <item>@string/export_as_dokuwiki</item>
        <item>@string/export_as_project</item>
    </string-array>

    <!-- Section heading for Advanced settings -->
    <string name="pref_header_advanced">Advanced</string>
    <!-- Tools within the app to assist developers -->
    <string name="pref_title_developer_tools">Developer Tools</string>
    <!-- Description of developer tools settings entry -->
    <string name="pref_description_developer_tools">Opens the developer tools</string>
    <!-- The minimum serverity of logged messages within the app -->
    <string name="pref_title_logging_level">Logging Level</string>
    <!-- The severity or type of messages logged in the app -->
    <string-array name="pref_logging_level_titles">
        <item>Information</item>
        <item>Warnings</item>
        <item>Errors</item>
    </string-array>

</resources>
